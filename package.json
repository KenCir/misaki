{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "misaki",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc",
		"lint": "prettier --check . && eslint --ext .ts --format=pretty src",
		"deploy": "node dist/util/deploy.js",
		"deploy:guild": "node --env-file=.env dist/util/deployGuild.js",
		"format": "prettier --write . && eslint --ext .ts --fix --format=pretty src",
		"start": "node dist/index.js",
		"dev": "NODE_ENV=development node --env-file=.env dist/index.js --enable-source-maps",
		"prepare": "husky install"
	},
	"dependencies": {
		"@discordjs/core": "^2.4.0",
		"bufferutil": "^4.1.0",
		"discord.js": "^14.25.1",
		"openai": "^6.17.0",
		"pino": "^10.3.0",
		"zlib-sync": "^0.1.10",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@sapphire/ts-config": "^5.0.3",
		"@types/node": "^24.10.9",
		"eslint": "^10.0.0",
		"eslint-config-neon": "^0.3.2",
		"eslint-formatter-compact": "^9.0.1",
		"eslint-formatter-pretty": "^7.0.0",
		"husky": "^9.0.0",
		"lint-staged": "^16.2.7",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.8.1",
		"typescript": "~5.9.3"
	},
	"engines": {
		"node": ">=22.12.0"
	}
}
